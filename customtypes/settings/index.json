{
  "format": "custom",
  "id": "settings",
  "label": "Settings",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "site_title": {
        "type": "Text",
        "config": {
          "label": "Site Title",
          "placeholder": "Title of the website"
        }
      },
      "site_description": {
        "type": "Text",
        "config": {
          "label": "Site Description",
          "placeholder": "Brief summary of the website"
        }
      },
      "og_image": {
        "type": "Image",
        "config": {
          "label": "OG Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        }
      },
      "social_navigation": {
        "type": "Group",
        "config": {
          "label": "Social Navigation",
          "repeat": true,
          "fields": {
            "link": {
              "type": "Link",
              "config": {
                "label": "Link",
                "placeholder": "URL",
                "select": null,
                "allowTargetBlank": true,
                "allowText": false,
                "repeat": false
              }
            },
            "label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": "Display text"
              }
            }
          }
        }
      }
    }
  }
}
